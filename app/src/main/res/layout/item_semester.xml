<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/container"
                                   android:clickable="true"
                                   android:focusable="true"
                                   app:cardCornerRadius="@dimen/_12sdp"
                                   android:layout_margin="@dimen/_4sdp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="?android:attr/selectableItemBackground"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout


            xmlns:tools="http://schemas.android.com/tools"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_16sdp"
                  android:text="Kỳ học"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:id="@+id/tv_ky_hoc"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/tv_ky_hoc"
                      android:layout_marginTop="8dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintEnd_toEndOf="parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/_13sdp"
                      android:text="Thời gian tạo"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/tv_time"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/_8sdp"
                      android:text="Người tạo"
                      android:textSize="@dimen/_13sdp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/tv_nguoi_tao"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
