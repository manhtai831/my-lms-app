<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.khohoclieu.NganhHKHL_Activity">

    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/branch_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"/>
        <TextView
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ngành Học"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/bg_devmobile"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_450sdp">

            <TextView
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="@dimen/_20sdp"
                android:text="Lập trình máy tính - Thiết bị di động"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/bg_home"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_250sdp">

                <TextView
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:text="Ứng dụng phần mềm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/bg_devmobile"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_185sdp">

                <TextView

                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:text="Thiết kế Web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>