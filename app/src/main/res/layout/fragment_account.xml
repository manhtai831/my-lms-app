<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.account.AccountFragment">

    <View android:layout_width="0dp"
          android:layout_height="106dp"
          android:background="@drawable/bg_gradient"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:id="@+id/view"/>
    <ImageView android:layout_width="@dimen/_80sdp"
               android:layout_height="@dimen/_80sdp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="52dp"
               android:background="@drawable/bg_radious"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.498"
               android:id="@+id/iv_avatar"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Name"
              android:layout_marginTop="@dimen/_16sdp"
              app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/tv_name"/>
    <LinearLayout android:layout_width="match_parent"
                  android:paddingHorizontal="@dimen/_8sdp"
                  android:layout_marginTop="@dimen/_32sdp"
                  android:orientation="vertical"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/tv_name"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/linearLayout3">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:textColor="@color/black"
                      android:layout_weight="1"
                      android:text="Email"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"


                      android:layout_weight="2"
                      android:text="manhtai831@gmail.com"
                      android:id="@+id/tv_email"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/_8sdp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:layout_weight="1"
                      android:text="Số điện thoại"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:layout_weight="2"
                      android:text="0943574556"
                      android:id="@+id/tv_phone_number"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/_8sdp"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:textColor="@color/black"
                      android:layout_weight="1"
                      android:text="Ngày sinh"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:layout_weight="2"
                      android:text="19/02/2001"
                      android:id="@+id/tv_birth"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/_8sdp"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:textColor="@color/black"
                      android:layout_weight="1"
                      android:text="Kì học hiện tại"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:layout_weight="2"
                      android:text="Summer 2021"
                      android:id="@+id/tv_ki_hoc"/>

        </LinearLayout><LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/_8sdp"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:textColor="@color/black"
                      android:layout_weight="1"
                      android:text="Chuyên ngành"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"

                      android:layout_weight="2"
                      android:text="Lập trình mobile"
                      android:id="@+id/tv_chuyen_nganh"/>

        </LinearLayout>
    </LinearLayout>
    <Button
            android:id="@+id/btnQuenMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@drawable/btn_login_signup"
            android:text="Đổi mật khẩu"
            android:translationZ="0dp"

            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnDangXuat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:background="@drawable/btn_login_signup"
            android:text="Đăng xuất"
            android:translationZ="0dp"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>