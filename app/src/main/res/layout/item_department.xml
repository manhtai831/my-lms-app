<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/purple"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:id="@+id/container"

                                                       android:padding="@dimen/_8sdp"
                                                       android:clickable="true"
                                                       android:focusable="true"
                                                       android:layout_height="wrap_content">

        <ImageView android:layout_width="@dimen/_150sdp"
                   android:layout_height="wrap_content"
                   android:maxHeight="@dimen/_150sdp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:id="@+id/iv_department"
                   app:layout_constraintTop_toTopOf="parent"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Lập trình máy tính thiết bị di động"
                  app:layout_constraintTop_toBottomOf="@+id/iv_department"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.5"
                  android:textColor="@color/white"
                  android:textSize="@dimen/_20sdp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/tv_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>