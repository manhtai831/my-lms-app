<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:padding="@dimen/_8sdp"
                                   android:clickable="true"
                                   android:layout_margin="@dimen/_8sdp"
                                   app:cardCornerRadius="@dimen/_12sdp"
                                   android:id="@+id/container"
                                   android:background="?android:attr/selectableItemBackground"
                                   android:focusable="true"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_12sdp"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/_32sdp"
                   android:layout_height="@dimen/_32sdp"
                   android:id="@+id/iv_subject"
                   android:scaleType="centerCrop"
                   app:srcCompat="@drawable/ic_folder"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout android:layout_width="0dp"
                      android:orientation="vertical"
                      app:layout_constraintStart_toEndOf="@+id/iv_subject"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.0"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:id="@+id/ln_subject"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent"
                      android:layout_marginLeft="@dimen/_8sdp"
                      android:layout_height="wrap_content"
                      android:text="Môn học" android:id="@+id/tv_subject"
                      android:textSize="@dimen/_14sdp"
                      android:textColor="@color/black"/>
            <TextView android:layout_width="match_parent"
                      android:layout_marginLeft="@dimen/_8sdp"
                      android:layout_height="wrap_content"
                      android:text="Giảng viên"
                      android:id="@+id/tv_teacher"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:textSize="@dimen/_8sdp"
                      android:textColor="@color/grey"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>